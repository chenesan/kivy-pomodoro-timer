#kivy 1.8.0


<TomatoPlayer>
    goal_input: goal_input

    Label:
        font_size: 30  
        center_x: root.width / 2
        center_y: root.height / 2
        text: root.goal        

    Label:
        font_size: 70
        center_x: root.width / 2
        top: root.top - 50
        text: root.time_strprop

    Label:
        font_size: 30
        center_x: root.width / 2
        center_y: root.height * 1 / 4.0
        text: "You've finished " + str(root.finished_tomato) + " tomatoes so far!"
    
    TextInput:
        width: 200
        id: goal_input
        hint_text: 'What is your goal?'
        focus: False
        multiline: False
        center: self.parent.center
